#!/bin/bash
#SBATCH --job-name=spec_tok_eval
#SBATCH --output=/n03data/huertas/spec_tok/logs/eval_%j.out
#SBATCH --error=/n03data/huertas/spec_tok/logs/eval_%j.err
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --nodelist=n03
#SBATCH --cpus-per-task=4
#SBATCH --mem=64G
#SBATCH --time=04:00:00
#SBATCH --gres=gpu:1

source /n03data/huertas/python/miniconda3/etc/profile.d/conda.sh
conda activate /n03data/huertas/python/miniconda3/envs/cosmos_visual/

# Set Hugging Face Cache Directory
export HF_HOME=/n03data/huertas/mmu
export HF_DATASETS_CACHE=/n03data/huertas/mmu

# Create directories
mkdir -p /n03data/huertas/spec_tok/logs
mkdir -p /n03data/huertas/spec_tok/evaluation_results

cd /n03data/huertas/python/spec_tok

# Run Evaluation
# REPLACE CHECKPOINT PATH BELOW
CHECKPOINT_PATH="/n03data/huertas/spec_tok/checkpoints/model_20251121_094655_epoch_1.pt"

python evaluate.py \
    --checkpoint $CHECKPOINT_PATH \
    --cache_dir /n03data/huertas/mmu \
    --save_dir /n03data/huertas/spec_tok/evaluation_results \
    --batch_size 64 \
    --embed_dim 512 \
    --depth 6 \
    --num_heads 8 \
    --max_samples 100000 \
    --seed 42

# #SBATCH --partition=pscompl